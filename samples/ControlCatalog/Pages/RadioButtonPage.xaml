<UserControl xmlns="https://github.com/avaloniaui"
			xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			x:Class="ControlCatalog.Pages.RadioButtonPage">
	<StackPanel Orientation="Horizontal"
				Spacing="8">
		<StackPanel Orientation="Vertical"
				Spacing="8">
			<RadioButton GroupName="A">Unchecked</RadioButton>
			<RadioButton GroupName="B"
						IsChecked="True">Checked</RadioButton>
			<RadioButton GroupName="C"
						IsChecked="{x:Null}">Indeterminate</RadioButton>
			<RadioButton GroupName="D"
						IsChecked="True"
						IsEnabled="False">Checked + disabled</RadioButton>
		</StackPanel>
		<StackPanel Orientation="Vertical"
				Spacing="8">
			<RadioButton GroupName="S"
						IsChecked="False">(Grouped) Unchecked</RadioButton>
			<RadioButton GroupName="S"
						IsChecked="True">(Grouped) Checked</RadioButton>
			<RadioButton GroupName="S"
						IsEnabled="False">(Grouped) Disabled</RadioButton>
		</StackPanel>
	</StackPanel>
</UserControl>
