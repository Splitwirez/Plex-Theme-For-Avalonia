					:is(TemplatedControl).toolsMenuArea RadioButton /template/ TemplatedControl.toolsMenuControlBackground.hover /template/ Border.rootBorder > Panel > Border.controlFrame > Border,
					:is(TemplatedControl).toolsMenuArea RadioButton /template/ TemplatedControl.toolsMenuControlBackground.pressed /template/ Border.rootBorder,
					:is(TemplatedControl).toolsMenuArea RadioButton /template/ TemplatedControl.toolsMenuControlBackground.pressed /template/ Border.rootBorder > Panel > Border:not(.controlFrame),
					:is(TemplatedControl).toolsMenuArea RadioButton /template/ TemplatedControl.toolsMenuControlBackground.pressed /template/ Border.rootBorder > Panel > Border.controlFrame,
					:is(TemplatedControl).toolsMenuArea RadioButton /template/ TemplatedControl.toolsMenuControlBackground.pressed /template/ Border.rootBorder > Panel > Border.controlFrame > Border-->
		<Setter Property="CornerRadius" Value="99999999" />
	</Style>
